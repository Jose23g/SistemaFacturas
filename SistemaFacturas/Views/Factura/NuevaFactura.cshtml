@model SistemasFacturas.Models.Facturar

@{
    ViewData["Title"] = "NuevaFactura";
    var medotoPagos = (List<SistemasFacturas.Models.MedotoPago>)ViewData["tipoPago"];
    var total = ViewData["total"];

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-auto mr-auto">
        <h4>Compra</h4>
    </div>
    <div class="col-auto">
        <button class="btn btn-secondary" type="button"
                data-target="#ModeloProducto" data-toggle="modal"
                data-backdrop="static" data-keyboard="false">
            <span class="glyphicon glyphicon-user"> Agregar Producto</span>
        </button>
    </div>
</div>
<hr />
<form asp-action="NuevaFactura">
    <div class="row">

        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Factura.NombreComersial" class="control-label"></label>
                <input asp-for="Factura.NombreComersial" class="form-control" value="Facturacion RESEB" readonly />
                <span asp-validation-for="Factura.NombreComersial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Factura.Identificacion" class="control-label"></label>
                <input asp-for="Factura.Identificacion" class="form-control" />
                <span asp-validation-for="Factura.Identificacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Factura.FechaEmision" class="control-label"></label>
                <input asp-for="Factura.FechaEmision" class="form-control" />
                <span asp-validation-for="Factura.FechaEmision" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Factura.Cod_metodo" class="control-label"></label>
                <select class="form-control" asp-for="Factura.Cod_metodo" asp-items='new SelectList(medotoPagos,"Cod_metodo", "Metodo_de_pago")'></select>
                <span asp-validation-for="Factura.Cod_metodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.NumeroFactura" class="control-label"></label>
                <input asp-for="Factura.NumeroFactura" class="form-control" />
                <span asp-validation-for="Factura.NumeroFactura" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Factura.Monto_total" class="control-label"></label>
                <input asp-for="Factura.Monto_total" class="form-control" id="total" />
                <span asp-validation-for="Factura.Monto_total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Factura.Subtotal" class="control-label"></label>
                <input asp-for="Factura.Subtotal" class="form-control" />
                <span asp-validation-for="Factura.Subtotal" class="text-danger"></span>
            </div>

        </div>

        <div class="col-sm-8">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>
                            Codigo Producto
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Detalle
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Disponibles
                        </th>
                        <th>
                            Accion
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.producto)
                    {
                        <tr class="Search">
                            <td>
                                @item.Nombre
                            </td>
                            <td>
                                @item.Detalle
                            </td>
                            <td>
                                @item.Precio
                            </td>
                            <td>
                                @item.Cod_categoria
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Cod_producto">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Cod_producto">Detalles</a> |
                                <a asp-action="Delete" asp-route-id="@item.Cod_producto">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>



<div>
    <a asp-action="Index">Regresar</a>
</div>

<partial name="_ModeloProducto" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
