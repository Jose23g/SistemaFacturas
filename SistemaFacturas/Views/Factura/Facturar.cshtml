@model Tuple<SistemasFacturas.Models.Factura, SistemasFacturas.Models.Detalle>

@{
    ViewData["Title"] = "Facturar";
    var fecha = ViewData["categorias"];
    var tipoDocu = (List<SistemasFacturas.Models.MedotoPago>)ViewData["tipoPago"];
    List<SistemasFacturas.Models.Producto> producto = (List<SistemasFacturas.Models.Producto>)ViewData["lisProducto"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venta</h2>


<div class="container">
    <form asp-action="SetEncabezado" asp-controller="Facturar" method="post" , id="SetEncabezado">
        <div class="row justify-content-between">

            <input asp-for="Item1.Cod_factura" type="hidden" />
            <div class=" form-group col-md-4">
                <label>Sucursal</label>
                <input type="text" asp-for="Item1.NombreComercial" class="form-control">
                <span asp-validation-for="Item1.NombreComercial"></span>
            </div>

            <div class="form-group col-6 col-md-4">
                <label>Numero de Factura</label>
                <input asp-for=Item1.NumeroFactura class="form-control" />
            </div>

            <div class="form-group col-md-4">
                <label>Fecha</label>
                <input asp-for="Item1.FechaEmision" class="form-control" />
            </div>

            <div class="w-100"></div>

            <div class="form-group col-md-4">
                <label>Cliente</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group col-md-4">
                <label>Forma de Pago</label>
                <select class="form-control" asp-for="Item1.Cod_metodo" asp-items='new SelectList(tipoDocu,"Cod_metodo", "Metodo_de_pago")'>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label>Vendedor</label>
                <input type="text" id="exampleForm2" class="form-control">
            </div>

        </div>
    </form>
</div>
<div class="col-auto">
    <button class="btn btn-secondary" type="button"
            data-target="#modalProducto" data-toggle="modal"
            data-backdrop="static" data-keyboard="false">
        <span class="glyphicon glyphicon-user"> Agregar Producto</span>
    </button>
</div>
<HR>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Nombre
            </th>
            <th>
                Detalle
            </th>
            <th>
                Precio
            </th>
            <th>
                Cantidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tabla_atr">

    </tbody>       
</table>
<div class="row justify-content-between">
    <div class="col-4">
        <div class="col-md-auto align-content-end">
            <div class="col-sm-10 col-md-10 col-lg-10 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body rounded border border-secondary">
                        <h5 class="card-title text-center">Total a pagar</h5>
                        <input type="text" id="exampleForm2" class="form-control">
                        <br />
                        <h5 class="card-title text-center">Total recibido</h5>
                        <input type="text" id="exampleForm2" class="form-control">
                        <br />
                        <h5 class="card-title text-center">Cambio</h5>
                        <input type="text" id="exampleForm2" class="form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <input type="submit" value="Facturar" class="btn btn-primary" />
</div>

<partial name="_ModalProductos" />
